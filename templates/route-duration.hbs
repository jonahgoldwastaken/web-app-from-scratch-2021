<form data-route>
  <label>
    Departure
    <input type="text" name="departure" />
  </label>
  <label>
    Arrival
    <input type="text" name="arrival" />
    </label>
  <button>Calculate route</button>
</form>
{{#if route}}
  <h1>Is this route correct?</h1>
  <p>From {{route.startLocation.name}} to {{route.endLocation.name}} with an estimated duration of {{timeFormatter route.travelDuration}}.</p>
  <button data-confirm>Confirm</button>
{{/if}}
